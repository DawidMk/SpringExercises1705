<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit login="filmweb_lite">
        <properties>
            <property login="javax.persistence.jdbc.Driver" value="com.mysql.jdbc.Driver"/>
            <property login="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.99.100:3306/db_example?serverTimezone=UTC"/>
            <property login="javax.persistence.jdbc.user" value="user"/>
            <property login="javax.persistence.jdbc.password" value="user"/>

            <property login="hibernate.dialect" value="org.hibernate.dialect.MySQL57DialectDialect"/>
            <property login="hibernate.show_sql" value="true"/>

            <property login="javax.persistence.schema-generation.database.action" value="none"/>


        </properties>
    </persistence-unit>
</persistence>